<!DOCTYPE html>
<html>
    <head>
        <title>Candidate | Home</title>
        <meta charset="utf-8">
        <script>
            function loading(){
                isapproved = {{isapproved}};
                if(isapproved != null){
                    if(isapproved == 1)
                        document.getElementById('cvapproved').innerHTML = "You ar accepted";
                    else
                        document.getElementById('cvapproved').innerHTML = "You are rejected";
                }else{
                    document.getElementById('cvapproved').innerHTML = "you will be seen soon, please wait. >3";
                }
            }
        </script>
    </head>
    <body onload="loading();">
        <h1>Hello {{name}},</h1>
        <h3 id="cvapproved"></h3>
    </body>
</html>